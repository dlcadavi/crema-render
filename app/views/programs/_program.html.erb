<%= form_with(model: program) do |form| %>
  <% if program.errors.any? %>
    <div style="color: red;font-size: 1em;">
      <%= pluralize(program.errors.count, "error") %> prohibited this program from being saved:

      <ul>
        <% program.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
<div class="row">
		<div class="col-12">

			<!-- Page title -->
			<div >
        <%= link_to fa_icon('arrow-left', text: "", style: "font-size: 2em; color:rgb(28,163,184)"),
          programs_path %>
        <h3>Programma</h3>
        <%= link_to fa_icon('pencil', text: "", style: "font-size: 2em; color:rgb(28,163,184)"),
          edit_program_path(program) %>
			  <hr>
		  </div>


			<!-- Form START -->
				<div class="row mb-5 gx-5">

					<!-- Contatto -->
					<div class="col-xxl-8 mb-5 mb-xxl-0">
						<div class="bg-secondary-professor px-4 py-5 rounded">
							<div class="row g-3">
								<h4 class="mb-4 mt-0">Informazione di programma</h4>
								<!-- Code -->
								<div class="col-md-6">
									<label class="form-label">Codice *</label>
									<input type="text" class="form-control-non-editable" placeholder="" aria-label="First name" <%= form.text_field :code %>
								</div>
								<!-- Name -->
								<div class="col-md-6">
									<label class="form-label">Nome *</label>
									<input type="text" class="form-control-non-editable" placeholder="" aria-label="Last name" <%= form.text_field :name %>
								</div>
								<!-- Areaº -->
								<div class="col-md-6">
									<label class="form-label">Area *</label>
									<input type="text" class="form-control-non-editable" placeholder="" aria-label="Phone number" <%= form.text_field :area %>
								</div>
                <div class="col-md-6">
                  <label class="form-label">Tipo *</label>
                  <select id='',type="text" class="form-control-non-editable", value=<%= form.select :tipo, ["Triennale", "Magistrale", "Ciclo unico", "Dottorato"]%>
                </div>
              </div>
            </div>
          </div>
				</div>  <!-- Terminan los dos primeros módulos -->

		</div>
	</div>
	</div>

  <% end %>
