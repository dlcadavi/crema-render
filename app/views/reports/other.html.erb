<%= render 'reports/left_panel' %>

<!-- Panel derecho -->

<div class="" style="position: relative;top: -150px; left: 250px;width:80%">

  <table class="table student-list">

    <thead>
        <tr>
          <th><span>  </span></th>
          <th><span> Nome </span></th>
          <th><span> Scarica </span></th>
          <th style="width:20%"><span> Scarica </span></th>
        </tr>
    </thead>

    <tbody id="activities">

      <!-- Full anagrafica -->
      <tr>
      <td> <i class="fa fa-file-excel-o" style="font-size: 30px; color:rgb(28,163,184);"></i> </td>
      <td> Anagrafica studenti completa </td>
      <td> Documento in formato .csv con l'anagrafica completa degli studenti </td>
      <td>
        <%= form_tag(export_full_anagrafica_students_path, method: :get) do %>
          <%= select_tag(:acyear_filter,
            options_from_collection_for_select(Acyear.all, :id, :name, params[:acyear_filter]),
            include_blank: 'tutti', onchange: 'this.form.submit()', class:"form-control", style:"display: table-cell;width: 80%;") %>
        <% end %>
      </td>

      <!-- Attività  (es decir, cursos) -->
      <tr>
      <td> <i class="fa fa-file-excel-o" style="font-size: 30px; color:rgb(28,163,184);"></i> </td>
      <td> Elenco attività </td>
      <td> Documento in formato .csv con l'elenco delle attività culturale </td>
