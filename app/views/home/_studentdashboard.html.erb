<!DOCTYPE html>


<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
    </head>
    <body>

        <!-- Page Content-->
        <section class="pt-4">
            <div class="container px-lg-5">
                <!-- Page Features-->

                <div class="row gx-lg-5">
                    <!-- Students -->

                    <!-- Enrollments -->
                    <div class="col-lg-6 col-xxl-4 mb-5">
                        <div class="card border-0 h-100">
                            <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-10">
                                <div class="feature mb-4 mt-n4">
                                  <%= link_to image_tag('mynextactivities.png', width: "200", height: "200", alt: 'myactivities'), '/myactivities' %>
                                </div>
                                <br><br><br>
                                <h2 class="fs-4 fw-bold">Iscrizione</h2>
                                <p class="mb-0">Visualizza l’elenco delle lezioni e gestisci la tue inscrizioni</p>
                            </div>
                        </div>
                    </div>

                    <!-- Attendance -->
                    <div class="col-lg-6 col-xxl-4 mb-5">
                        <div class="card border-0 h-100">
                            <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-10">
                                <div class="feature mb-4 mt-n4">
                                  <%= link_to image_tag('myattendance.png', width: "200", height: "200", alt: 'mycourses'), '/mycourses' %>
                                </div>
                                <br><br><br>
                                <h2 class="fs-4 fw-bold">Partecipazione</h2>
                                <p class="mb-0">Visualizza l’elenco delle attività e monitora la tua partecipazione</p>
                            </div>
                        </div>
                    </div>

                    <!-- Calendar -->
                    <div class="col-lg-6 col-xxl-4 mb-5">
                        <div class="card border-0 h-100">
                            <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-10">
                              <div class="feature mb-4 mt-n4">
                                <%= link_to image_tag('calendar.png', width: "200", height: "200", alt: 'Calenario'),'/calendar' %>
                              </div>
                              <br><br><br>
                              <h2 class="fs-4 fw-bold">Calendario</h2>
                              <p class="mb-0">Visualizza il calendario completo</p>
                            </div>
                        </div>
                    </div>

                    <!-- My Calendar -->
                    <div class="col-lg-6 col-xxl-4 mb-5">
                        <div class="card border-0 h-100">
                            <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-10">
                              <div class="feature mb-4 mt-n4">
                                <%= link_to image_tag('mycalendar.png', width: "200", height: "200", alt: 'Calenario'),'/mycalendar' %>
                              </div>
                              <br><br><br>
                              <h2 class="fs-4 fw-bold">Il mio calendario</h2>
                              <p class="mb-0">Visualizza il calendario delle tue prossime lezioni</p>
                            </div>
                        </div>
                    </div>

                  </div>
            </div>
        </section>

    </body>
</html>
