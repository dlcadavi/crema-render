<%= form_with(model: acyear) do |form| %>

<div class="container">
<div class="row">
		<div class="col-12">
			<!-- Page title -->
			<div >
        <%= link_to fa_icon('arrow-left', text: "", style: "font-size: 2em; color:rgb(28,163,184)"),
          acyears_path %>
        <h3>Anno accademico</h3>
			  <hr>
		  </div>

			<!-- Información general -->
				<div class="row mb-5 gx-5">
					<!-- Contatto -->
					<div class="col-xxl-8 mb-5 mb-xxl-0">
						<div class="bg-secondary-activity px-4 py-5 rounded">
							<div class="row g-3">
								<h4 class="mb-4 mt-0">Informazione generale</h4>
								<!-- Título -->
								<div class="col-md-6">
									<label class="form-label">Nome *</label>
									<input type="text" class="form-control-non-editable" style="width: 200%;"<%= form.text_field :name %>
								</div>

                <!-- Div para mejoras estéticas -->
                <div>
								</div>

								<!-- Descripción -->
								<div class="col-md-6">
									<label class="form-label">Data inizio *</label>
                  <input class="form-control-non-editable" style="width: 100%;" <%= form.date_field :startdate,  placeholder: 'DD/MM/YYYY' %>
								</div>

                <!-- Descripción -->
								<div class="col-md-6">
									<label class="form-label">Data fine *</label>
                  <input class="form-control-non-editable" style="width: 100%;" <%= form.date_field :finaldate,  placeholder: 'DD/MM/YYYY' %>
								</div>

							</div> <!-- Row END -->
						</div>
					</div>

          <!-- Detalles -->
					<div class="col-xxl-4">
					</div> <!-- Row END -->

				</div>  <!-- Terminan los dos primeros módulos -->



				<!-- Estudiantes -->
				<div class="row mb-5 gx-5">
					<div class="col-xxl-6 mb-5 mb-xxl-0">
						<div class="bg-secondary-activity px-4 py-5 rounded">
							<div class="row g-3">
								<h4 class="mb-4 mt-0">Studenti</h4>
                <div class="col-md-6">
                  <label class="form-label">Studenti iscritti </label>
										<% @stays = Stay.where(acyear_id: @acyear.id) %>
						        <% @students = Student.where(id: @stays.pluck(:student_id)) if @stays %>
										<% @students.each do |student| %>
											<li><%= student.lastname + " " + student.name %></li>
										<% end %>
                </div>
							</div> <!-- Row END -->
						</div>
					</div>


				</div> <!-- Row END -->



		</div><!-- Form END -->
	</div>
	</div>

  <% end %>
