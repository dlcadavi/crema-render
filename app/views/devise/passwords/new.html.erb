<p>
  <h2>Password dimenticata :(</h2>
  <br>
  <h6>Non ti preocupare, ti inviaremo delle instruzione per ricuperarla </h6>
</p>


<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <!-- AdministraciÃ³n de los errores -->
  <% if @user.errors.any? %>
    <div style="color: gray;font-size: 1em;">
      <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">

    <!-- Mail -->
    <div class="col-md-6">
      <label class="form-label" style="margin-top:3%;">Email *</label>
      <input type="text" class="form-control" style="width: 60%;"
      <%= f.text_field :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

  </div>

  <div class="form-actions"style="margin-top:3%;">
    <%= f.button :submit, "Inviami istruzione per ricoverare la mia password", :class => "btn btn-primary btn-lg"  %>
  </div>
<% end %>
